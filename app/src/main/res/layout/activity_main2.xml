<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        tools:context="com.example.android.mypizzaapp.Main2Activity">


        <TextView
            android:id="@+id/detailHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="20dp"
            android:text="Order Details at: "
            android:textAllCaps="false"
            android:textColor="#4c532b"
            android:textSize="20sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/detailHead"
            android:layout_marginTop="10dp"
            android:background="#d4cece" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/detailHead"
            android:layout_alignBottom="@+id/detailHead"
            android:layout_toEndOf="@+id/detailHead"
            android:layout_toRightOf="@+id/detailHead"
            android:format12Hour="hh:mm:ss a"
            android:text="Time:"
            android:textColor="#0b4114"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/order_summary_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="10dp"
                    android:text="Name:"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittextstyle"

                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Matthew"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:text="Address:"
                    android:drawableTint="@color/hint_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_home_black_24dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b5d9ea"
                    android:layout_marginLeft="5dp"
                    android:text="Ikeja"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:drawableLeft="@drawable/ic_location_city_black_24dp"
                    android:drawablePadding="10dp"
                    android:text="State:"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b5d9ea"
                    android:layout_marginLeft="5dp"
                    android:text="Ikeja"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:text="LGA:"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/lga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#b5d9ea"
                    android:fontFamily="monospace"
                    android:text="Ikeja"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:text="Phone Number:"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b5d9ea"
                    android:fontFamily="monospace"
                    android:layout_marginLeft="5dp"
                    android:text="phone number"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:text="Email Address:"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b5d9ea"
                    android:fontFamily="monospace"
                    android:layout_marginLeft="5dp"
                    android:text="email"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:text="Quantity:"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b5d9ea"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="monospace"
                    android:text="quantity"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:text="Crust Type"
                    android:textSize="20dp"

                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/crust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b5d9ea"
                    android:fontFamily="monospace"
                    android:text="Ikeja"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:text="Topping Type"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/topping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#b5d9ea"
                    android:text="topping type" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#54dfdfdf"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d9eab5"
                    android:fontFamily="monospace"
                    android:text="Total Amount:"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b5d9ea"
                    android:text="amount"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="monospace"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/order_summary_text_view"
            android:layout_centerHorizontal="true"
            android:background="#d4cece" />

        <LinearLayout
            android:id="@+id/viewButtons1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view2"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/emailOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detailHead"
                android:layout_alignStart="@+id/detailHead"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:layout_below="@+id/view2"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:onClick="sendEmail"
                android:shadowColor="#f14747"
                android:text="Email"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#287900"
                android:textSize="17sp" />

            <Button
                android:id="@+id/callButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_toEndOf="@+id/emailOrder"
                android:layout_toRightOf="@+id/emailOrder"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:fontFamily="sans-serif-condensed"
                android:onClick="dialPhoneNumber"
                android:shadowColor="#f14747"
                android:text="Call"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#287900"
                android:textSize="17sp" />

            <Button
                android:id="@+id/websiteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/callButton"
                android:layout_alignBottom="@+id/callButton"
                android:layout_toEndOf="@+id/callButton"
                android:layout_toRightOf="@+id/callButton"
                android:layout_weight="1"
android:drawableLeft="@drawable/ic_location_city_black_24dp"
                android:fontFamily="sans-serif-condensed"
                android:onClick="visitWebsite"
                android:text="Website"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#287900"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewButtons2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/viewButtons1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/mapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:onClick="mapLocation"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:text="Location"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#287900"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cameraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/mapButton"
                android:layout_toRightOf="@+id/mapButton"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:onClick="capturePicture"
                android:drawableLeft="@drawable/ic_camera_black_24dp"
                android:text="Capture"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#287900"
                android:textSize="16sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shareAllapps"
                android:layout_weight="1"
                android:text="Share"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/capturedImage"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_below="@id/viewButtons2"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="20dp" />

    </RelativeLayout>

</ScrollView>